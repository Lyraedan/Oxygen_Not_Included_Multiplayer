# ONI MP File Server Configuration

# Server Configuration
PORT=3000
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=104857600  # 100MB in bytes
MAX_FILES=50
LOG_LEVEL=info

# Security (Optional)
# AUTH_TOKEN=your-secret-token-here

# CORS Configuration
CORS_ORIGIN=*

